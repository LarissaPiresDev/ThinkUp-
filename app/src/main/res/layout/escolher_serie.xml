<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CEE0F5"
    tools:context=".EscolherSerieActivity">

    <!-- Texto título -->
    <TextView
        android:id="@+id/texto_serie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="127dp"
        android:text="ESCOLHA UMA SÉRIE"
        android:textAlignment="center"
        android:textColor="#2F376B"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Botão 1ª série -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/primeira_serie"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:background="@drawable/botao_borda_azul"
        android:text="1ª SÉRIE ENSINO MÉDIO"
        android:textColor="#2B3A67"
        app:layout_constraintTop_toBottomOf="@id/texto_serie"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.75"/>

    <!-- Botão 2ª série -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/segunda_serie"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:background="@drawable/botao_borda_azul"
        android:text="2ª SÉRIE ENSINO MÉDIO"
        android:textColor="#2B3A67"
        app:layout_constraintTop_toBottomOf="@id/primeira_serie"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.75"/>

    <!-- Botão 3ª série -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/terceira_serie"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:background="@drawable/botao_borda_azul"
        android:text="3ª SÉRIE ENSINO MÉDIO"
        android:textColor="#2B3A67"
        app:layout_constraintTop_toBottomOf="@id/segunda_serie"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.75"/>

    <!-- Botão Gabarito -->

</androidx.constraintlayout.widget.ConstraintLayout>
